{include file=member.header.html}

<script type="text/javascript">
$(function(){
    $('#add_time_from').datepicker({dateFormat: 'yy-mm-dd'});
    $('#add_time_to').datepicker({dateFormat: 'yy-mm-dd'});
});
</script>

<body class="gray" style="overflow-x:hidden;">
    <div class="w320">
        <div class="fixed">
            <!---头部------>
            <div class="header header2">
                <a href="{url app=default}"
                   class="back2_index"></a>
                交易宝
                <a href="{url app=my_favorite}" class="bookmark"></a>
            </div>    
   </div>
   
      <div class="public table deposit" style="margin-top:60px;">
   <div class="drawlist">
                	<div class="tab-ttl">
                		<ul class="withdraw-tab clearfix">
                        <li>	<p class="opr">  <a  style="width:100%" class="white_btn" href="{url app=deposit&act=drawlist}"><span>{$lang.withdraw_record}</span></a>  </p></li>
                 <li> 	<p class="opr">       <a style="width:100%" class="white_btn" href="{url app=deposit&act=rechargelist}"><span>{$lang.recharge_record}</span></a>
                    	</p></li>
                        
                        </ul>
                    </div>
                    <div style="clear:both"></div>
              	<div class="title clearfix">
                 	<form method="get" class="float-left">
                        	<input type="hidden" name="app" value="deposit" />
                            <input type="hidden" name="act" value="drawlist" />
                			<input class="text" type="text" name="add_time_from" id="add_time_from" value="{$smarty.get.add_time_from}" /> <span>-</span>
                            <input class="text" id="add_time_to" type="text" name="add_time_to" value="{$smarty.get.add_time_to}" />
                            <select name="status">
                            	<option value=""></option>
                            	<option value="success" {if $smarty.get.status eq 'success'} selected="selected" {/if}>{$lang.success}</option>
                                <option value="verifing" {if $smarty.get.status eq 'verifing'} selected="selected" {/if}>{$lang.verifing}</option>
                            </select>
                			<input type="submit" class="btn-withdraw" value="{$lang.search}" />
        				</form>
                          <div style="clear:both"></div>
                         <div class="float-left" style="margin-top:15px;">
                    		已成功提现 <font color="#FF0000"> {$withdraws.total_amount}</font> 元
                        </div>
                        <div style="clear:both"></div>
                        <div class="u_order" style="margin-top:15px;">
                    <div class="orderbox">
                        <div class="content">
                    	<ul>
                    		<!--{foreach from=$withdraws.list item=withdraw}-->
                        	<li class="clearfix">
                        		<div class="tradesn"> 流水号 : &nbsp;{$withdraw.tradesn}</div>
                            	<div class="time">创建时间 : &nbsp;{$withdraw.add_time|date:Y.m.d H.i.s}</div>
                        		<div class="info">名称: &nbsp;{$lang.withdraw}</div>
                            	<div class="method"><span class="f60">收/支: &nbsp;{$lang.defray}</span></div>
                            	<div class="money">
                                	金额(元): &nbsp;{$withdraw.amount}
                                </div>
                            	<div class="payway">资金渠道: &nbsp;{$withdraw.card_info.bank_name}<br /><span class="gray">{$withdraw.card_info.num}</span></div>
                            	<div class="status">状态: &nbsp;{if $withdraw.status eq 'SUCCESS'}{$lang.success}{else}<span class="f60">{$lang.verifing}</span>{/if}</div>
                        	</li>
                            <!--{/foreach}-->
                    	</ul>
                        <!--{if !$withdraws.list}-->
                        <div class="notice-word mt10">没有任何符合条件的记录。 
                        
                          <p class="opr"> <a class="white_btn" href="{url app=deposit&act=withdraw}">马上提现</a>
                         </p>
                        </div>
                        <!--{/if}-->
                    </div>
                        </div>
                        </div>
                        
                        </div>
                
                      
    {include file=member.page.bottom.html}
   </div>
   
   </div>
{include file=footer.html}
