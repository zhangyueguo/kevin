{include file=company1.header.html}
<style>
    .borline td { padding:10px 0px; }
    .ware_list th { text-align:left; }
    .width4{width:80px;}
</style>
<script type="text/javascript">
    $(function(){
        $("input[type='radio']").click(function(){
              if($(this).val()=='shang'){
                  $(".shangh").show();
              }else{
                  $(".shangh").hide();
              }
        });

    });

</script>
<div class="content">
    {include file=company.menu.html}
    <div id="right">

        {include file=member.submenu.html}

        <div class="wrap">
            <div class="public">
                <form method="post" enctype="multipart/form-data" id="profile_form">
                    <div class="information">
                    <!--{if $billings neq ''}-->
                            <table class="invoice_list" cellpadding="0" cellspacing="0">
                                <tbody>
                                <tr>
                                    <th style="width:5%">编号</th>
                                    <th style="width:25%">商家名称</th>
                                    <th style="width:15%">申请日期</th>
                                    <th style="width:10%">状态</th>
                                    <th style="width:15%">操作</th>
                                </tr>
                                <!--{foreach from=$billings item=list name=foo}-->
                                <tr>
                                    <td>{$smarty.foreach.foo.iteration}</td>
                                    <td>{$list.store_name}</td>
                                    <td>{$list.apply_time|date:Y-m-d H:i:s}</td>
                                    <td><!--{if $list.status == '1'}-->审核中<!--{elseif $list.status == '2'}-->已通过<!--{elseif $list.status == '3'}-->已驳回<!--{elseif $list.status == '41'}-->逾期未还款<!--{elseif $list.status == '42'}-->已还款<!--{elseif $list.status == '41'}-->已过期<!--{/if}--></td>
                                    <td><a href="">联系商家</a></td>
                                </tr>
                                <!--{/foreach}-->
                                </tbody>
                            </table>
                        <!--{/if}-->
                        <div class="info individual">
                            
                            <table>
                                <tr>
                                    <!--<th class="width4">{$lang.company_name}: </th>-->
                                    <th class="width4">姓名: </th>
                                    <td>{$minfo.user_name}</td>
                                </tr>
                                <tr>
                                    <th>记账单类型:</th>
                                    <td>
                                        <label><input type="radio" name="beilei" value="ping" {if $profile.gender eq 1}checked="checked"{/if} /> 平台 </label>
                                        <label><input type="radio" name="beilei" value="shang" {if $profile.gender eq 2}checked="checked"{/if} /> 商家 </label>
                                    </td>
                                </tr>
                                <tr class="shangh" style="display: none">
                                    <th>选择商户:</th>
                                    <td class="paddingT15 wordSpacing5" >
                                        <div id="region">
                                            <input type="hidden" id="zih" name="region_id" value="" class="mls_id" />
                                            <input type="hidden" name="region_name" value="" class="mls_names" />
                                            <!--<span>{$company.region_name|escape}</span>-->
                                            <input type="button" value="{$lang.edit}" class="edit_region" />
                                            <select style="display:none">
                                                <option>{$lang.select_pls}</option>
                                                {html_options options=$regions}
                                            </select>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th></th>
                                    <td><input type="submit" class="btn" value="提交" /></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="clear"></div>
        <div class="adorn_right1"></div>
        <div class="adorn_right2"></div>
        <div class="adorn_right3"></div>
        <div class="adorn_right4"></div>
    </div>
    <div class="clear"></div>
</div>
</div>
<script type="text/javascript">
    
</script>
{include file=footer.html}
