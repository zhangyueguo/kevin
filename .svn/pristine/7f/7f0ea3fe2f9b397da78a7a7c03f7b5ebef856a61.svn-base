<script type="text/javascript">
    function renew(obj,id){
        $.post("index.php?app=billing_order_seller&act=renew", { id: id},
           function(data){
            if(data == 'success'){
                alert('操作成功！');
                window.location.reload();
            }
        });
    }

    function revoke(obj,id){
        $.post("index.php?app=billing_order_seller&act=revoke", { id: id},
           function(data){
            if(data == 'success'){
                alert('操作成功！');
                window.location.reload();
            }
        });
    }
</script>
