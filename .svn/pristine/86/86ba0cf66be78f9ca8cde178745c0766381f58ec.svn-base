{include file=company.header.html}
<style>
    .borline td { padding:10px 0px; }
    .ware_list th { text-align:left; }
</style>
<script type="text/javascript">
    //<!CDATA[
    $(function(){
        $('#profile_form').validate({
            errorPlacement: function(error, element){
                $(element).parent('span').parent('b').after(error);
            },
            rules : {
                portrait : {
                    accept   : 'gif|jpe?g|png'
                }
            },
            messages : {
                portrait  : {
                    accept   : '{$lang.avatar}'
                }
            }
        });
        $('input[ectype="change_avatar"]').change(function(){
            var src = getFullPath($(this)[0]);
            $('img[ectype="avatar"]').attr('src', src);
            $('input[ectype="change_avatar"]').removeAttr('name');
            $(this).attr('name', 'portrait');
        });
    });

    //]]>
</script>
<div class="content">
    {include file=company.menu.html}
    <div id="right">
        {include file=member.submenu.html}
        <div class="wrap">
            <div class="public">
                <form method="post" enctype="multipart/form-data" id="profile_form">
                    <div class="information">
                        <!--{if !$edit_avatar}-->
                        <div class="photo width13">
                            <p><img src="<!--{if $profile.portrait}-->{$profile.portrait}?{$random_number}<!--{else}-->{$site_url}/data/system/default_user_portrait.gif<!--{/if}-->" width="120" height="120" alt="" ectype="avatar" /></p>
                            <b>
                                <span class="file1"><input type="file" size="1" maxlength="0" hidefocus="true" ectype="change_avatar" name="portrait1" /></span>
                                <span class="file2"><input type="file" size="1" maxlength="0" hidefocus="true" ectype="change_avatar" name="portrait2" /></span>
                                <div class="txt">{$lang.change_portrait}</div>
                            </b>
                        </div>
                        <!--{/if}-->
                        <div class="info individual">
                            <table>
                                <tr>
                                    <!--<th class="width4">{$lang.company_name}: </th>-->
                                    <th class="width4">企业名称: </th>
                                    <td><input type="text" class="text width_normal" name="store_name" value="{$store.store_name}" /></td>
                                </tr>
                                <tr>
                                    <th>{$lang.email}:</th>
                                    <td><input type="text" class="text width_normal" name="email" value="{$store.storemail}" /></td>
                                </tr>
                                <tr>
                                    <th>地区:</th>
                                    <!--<td> </td>-->
                                    <td class="paddingT15 wordSpacing5" >
                                        <div id="region">
                                            <input type="hidden" name="region_id" value="{$store.region_id}" class="mls_id" />
                                            <input type="hidden" name="region_name" value="{$store.region_name|escape}" class="mls_names" />
                                            <span>{$store.region_name|escape}</span>
                                            <input type="button" value="{$lang.edit}" class="edit_region" />
                                            <select style="display:none">
                                                <option>{$lang.select_pls}</option>
                                                {html_options options=$regions}
                                            </select>
                                        </div>
                                    </td>
                                </tr>

                                <tr>
                                    <th>详细位置:</th>
                                    <td><input type="text" class="text width_normal" name="address" value="{$store.address}" /></td>
                                </tr>



                                <tr>
                                    <!--<th>{$lang.birthday}: </th>-->
                                    <th>负责人: </th>
                                    <td>
                                        <input type="text" class="text width_normal" name="lxrname" id="birthday" value="{$store.lxrname}" />
                                    </td>
                                </tr>
                                <tr>
                                    <th>部门:</th>
                                    <td> <input type="text" class="text width_normal" name="sectname" value="{$store.sectname}" /></td>
                                </tr>
                                <tr>
                                    <th>固定电话:</th>
                                    <td><input type="text"  class="text width_normal"name="tel" value="{$store.tel}" /></td>
                                </tr>
                                <tr>
                                    <th>手机:</th>
                                    <td><input type="text"  class="text width_normal"name="phone" value="{$store.phone}" /></td>
                                </tr>
                                <!--{if $edit_avatar}-->
                                <tr>
                                    <th>{$lang.portrait}:</th>
                                    <td>{$edit_avatar}</td>
                                </tr>
                                <!--{/if}-->
                                <tr>
                                    <th></th>
                                    <!--<td><input type="submit" class="btn" value="{$lang.save_edit}" /></td>-->
                                    <td><input type="submit" class="btn" value="保存修改" /></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="clear"></div>
        <div class="adorn_right1"></div>
        <div class="adorn_right2"></div>
        <div class="adorn_right3"></div>
        <div class="adorn_right4"></div>
    </div>
    <div class="clear"></div>
</div>
</div>
{include file=footer.html}
