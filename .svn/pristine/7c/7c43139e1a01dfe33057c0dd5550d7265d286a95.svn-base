{include file=member.header.html}

<body class="gray" style="overflow-x:hidden;">
    <div class="w320">
        <div class="fixed">
            <!---头部------>
            <div class="header header2">
                <a href="{url app=default}"
                   class="back2_index"></a>
                交易宝
                <a href="{url app=my_favorite}" class="bookmark"></a>
            </div>    
        </div>
        
         <div class="public table deposit" style="margin-top:60px;">
         
         
         
             <div class="u_order" style="margin-top:15px;">
               <div class="orderbox" style="padding-bottom:20px;">
         <div class="deposit-withdraw" style="padding:15px;">
                	<!--{if $deposit_account.money gt 0}-->
                	<div class="notice-word">将您的账户余额转出到另外的交易宝账户上，请慎重填写。</div>
                	<form method="get">
                    	<input type="hidden" name="app" value="deposit" />
                        <input type="hidden" name="act" value="transfer_confirm" />
                    	<div class="title clearfix">
                        	<h2 >您的账户（{$deposit_account.account}）</h2>
                            <p >余额： <font color="#FC491E">{$deposit_account.money}</font>元</p>
                        </div>
                		<div class="form" >
                			<dl class="clearfix">
                        		<dt>转入账户：</dt>
                            	<dd>
                                	<input type="text" class="text" name="account" />
                                </dd>
                        	</dl>
                            <dl class="clearfix">
                        		<dt>转账金额：</dt>
                            	<dd><input type="text" name="money" class="text" value="" /> 元</dd>
                        	</dl>
                            <dl class="clearfix">
                        		<dt>&nbsp;</dt>
                            	<dd class="submit">
                                	<span class="btn-alipay">
                                		<input type="submit" value="下一步" />
                                    </span>
                                </dd>
                        	</dl>
                		</div>
					</form>
                    <!--{else}-->
                    <div class="notice-word">您目前账户余额为<span class="f60">0</span>元，不能转账。</div>
                    <!--{/if}-->
				</div>
         
         
         </div></div>
         </div>
        
       
       
       
       
        </div>
{include file=footer.html}
